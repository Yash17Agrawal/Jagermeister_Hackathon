<resources>

    <color name="custom_theme_color">#000000</color>
    <color name="custom_theme_color1">#262626</color>
    <color name="custom_theme_color2">#ffffff</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/custom_theme_color1</item>
        <item name="colorPrimaryDark">@color/custom_theme_color</item>
        <item name="colorAccent">@color/custom_theme_color2</item>
    </style>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/custom_theme_color1</item>
        <item name="colorPrimaryDark">@color/custom_theme_color</item>
        <item name="colorAccent">@color/custom_theme_color2</item>
    </style>

</resources>
